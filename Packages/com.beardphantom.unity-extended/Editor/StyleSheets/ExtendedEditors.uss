.extended-button {
    border-bottom-width: 0;
    border-top-width: 0;
    border-left-width: 0;
    border-right-width: 0;
    background-color: rgba(0, 0, 0, 0);
    padding: 0;
    min-width: 16px;
    width: 16px;
    margin-left: 4px;
    margin-right: 0;
    background-size: contain;
}

.extended-property-field {
    max-width: 95%;
    flex-grow: 1;
}

.extended-button:hover:enabled {
    background-color: #686868;
}

.extended-root {
    flex-direction: row;
    max-width: 100%;
}